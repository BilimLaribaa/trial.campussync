{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CampusSync",
  "version": "0.1.0",
  "identifier": "com.campussync.com",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3039",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "CampusSync",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
    "enable": true,
    "scope": [
      "$APPDATA/com.campussync.com/**",
      "$RESOURCE/**"
    ]
  }
    }
  },
  "plugins": {
    "fs": {
      "scope": [
        "$APPDATA/com.campussync.com",
        "$APPDATA/com.campussync.com/**"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}